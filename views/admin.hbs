<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Management Admin</title>
    <link rel="stylesheet" href="admin.css">
</head>
<body>
    <header>
        <h1>Hotel Management Admin</h1>
    </header>
    <!-- Navigation bar -->
    <nav>
        <ul>
            <li><a href="#dashboard">Dashboard</a></li>
            <li><a href="#rooms">Rooms</a></li>
            <li><a href="#bookings">Bookings</a></li>
            <li><a href="#users">Users</a></li>
            <li><a href="#" onclick="logout()">Logout</a></li>
        </ul>
    </nav>
    <!-- Navigation bar end -->
    <main>
            <!-- Dashboard content -->
   <section id="dashboard">
    <h2>Dashboard</h2>
    <div class="dashboard-content">
        <div class="stat-box">
            <h3>Total Rooms</h3>
            <p class="stat-value">150</p>
        </div>

        <div class="stat-box">
            <h3>Bookings Today</h3>
            <p class="stat-value">{{Today_booking}}</p>
        </div>

        <div class="stat-box">
            <h3>Revenue Today</h3>
            <p class="stat-value">${{Today_revenue}}</p>
        </div>

    </div>
</section>

<!-- room content -->

<section id="rooms">
    <h2>Rooms Management</h2>
    <div class="rooms-content">
        <div class="room-card">
            <img src="https://images.pexels.com/photos/7534269/pexels-photo-7534269.jpeg" alt="Room 1">
            <h3>Deluxe Room</h3>
            <p>Spacious room with a king-sized bed and a stunning view.</p>
            <p>Price: $150/night</p>
            <button>Edit</button>
            <button>Delete</button>
        </div>

        <div class="room-card">
            <img src="https://cf.bstatic.com/xdata/images/hotel/max1024x768/498055943.jpg?k=74eac72b3a6ff6221dae23d1479a171b3630c92f0e76a42a691c4ed9e45dd19f&o=&hp=1" alt="Room 2">
            <h3>Executive Suite</h3>
            <p>Luxurious suite with a separate living area and a jacuzzi.</p>
            <p>Price: $250/night</p>
            <button>Edit</button>
            <button>Delete</button>
        </div>

        <div class="room-card">
            <img src="https://5.imimg.com/data5/KO/BP/XZ/GLADMIN-25496103/6w6a0075-1-500x500.jpg" alt="Room 3">
            <h3>Non AC Room</h3>
            <p>Luxurious suite with a separate living area and a jacuzzi.</p>
            <p>Price: $250/night</p>
            <button>Edit</button>
            <button>Delete</button>
        </div>
    </div>
</section>

        <!-- booking content -->
<section id="bookings">
    <h2>Booking Management</h2>
     <table>
    <thead>
      <tr>
        <th>User ID</th>
        <th>Username</th>
        <th>Room Type</th>
        <th>Check-in Date</th>
        <th>Check-out Date</th>
        <th>Number of Guests</th>
        <th>Number of Days</th>
        <th>Amount</th>
        <th>Reference Number</th>
      </tr>
    </thead>
    <tbody>
      {{#each bookings}}
      <tr>
        <td>{{user_id}}</td>
        <td>{{username}}</td>
        <td>{{room_type}}</td>
        <td>{{check_in_date}}</td>
        <td>{{check_out_date}}</td>
        <td>{{number_of_guest}}</td>
        <td>{{no_of_days}}</td>
        <td>${{Amount}}</td>
        <td>{{refrence_number}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</section>

    </main>
    <script>
        function logout() {
            alert("Logged out successfully!");
            location.replace("/")
        }
    </script>
</body>
</html>
