<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Management Admin</title>
    <link rel="stylesheet" href="admin.css">
</head>
<body>
    <header>
        <h1>Hotel Management Admin</h1>
    </header>
    <!-- Navigation bar -->
    <nav>
        <ul>
            <li><a href="#dashboard">Dashboard</a></li>
            <li><a href="#rooms">Rooms</a></li>
            <li><a href="#bookings">Bookings</a></li>
            <li><a href="#users">Users</a></li>
            <li><a href="#" onclick="logout()">Logout</a></li>
        </ul>
    </nav>
    <!-- Navigation bar end -->
    <main>
            <!-- Dashboard content -->
   <section id="dashboard">
    <h2>Dashboard</h2>
    <div class="dashboard-content">
        <div class="stat-box">
            <h3>Total Rooms</h3>
            <p class="stat-value">150</p>
        </div>

        <div class="stat-box">
            <h3>Bookings Today</h3>
            <p class="stat-value">25</p>
        </div>

        <div class="stat-box">
            <h3>Revenue Today</h3>
            <p class="stat-value">$5000</p>
        </div>

    </div>
</section>

<!-- room content -->

<section id="rooms">
    <h2>Rooms Management</h2>
    <div class="rooms-content">
        <div class="room-card">
            <img src="https://images.pexels.com/photos/7534269/pexels-photo-7534269.jpeg" alt="Room 1">
            <h3>Deluxe Room</h3>
            <p>Spacious room with a king-sized bed and a stunning view.</p>
            <p>Price: $150/night</p>
            <button>Edit</button>
            <button>Delete</button>
        </div>

        <div class="room-card">
            <img src="https://cf.bstatic.com/xdata/images/hotel/max1024x768/498055943.jpg?k=74eac72b3a6ff6221dae23d1479a171b3630c92f0e76a42a691c4ed9e45dd19f&o=&hp=1" alt="Room 2">
            <h3>Executive Suite</h3>
            <p>Luxurious suite with a separate living area and a jacuzzi.</p>
            <p>Price: $250/night</p>
            <button>Edit</button>
            <button>Delete</button>
        </div>

        <div class="room-card">
            <img src="https://5.imimg.com/data5/KO/BP/XZ/GLADMIN-25496103/6w6a0075-1-500x500.jpg" alt="Room 3">
            <h3>Non AC Room</h3>
            <p>Luxurious suite with a separate living area and a jacuzzi.</p>
            <p>Price: $250/night</p>
            <button>Edit</button>
            <button>Delete</button>
        </div>
    </div>
</section>


        <!-- booking content -->

<section id="bookings">
    <h2>Booking Management</h2>
    <div class="bookings-content">
        <div class="booking-card">
            <h3>John Doe</h3>
            <p>Room: Deluxe Room</p>
            <p>Check-in: 2023-01-15</p>
            <p>Check-out: 2023-01-20</p>
            <p>Total Price: $750</p>
            <button>Edit</button>
            <button>Delete</button>
        </div>

        <div class="booking-card">
            <h3>Jane Smith</h3>
            <p>Room: Executive Suite</p>
            <p>Check-in: 2023-02-10</p>
            <p>Check-out: 2023-02-15</p>
            <p>Total Price: $1250</p>
            <button>Edit</button>
            <button>Delete</button>
        </div>

    </div>
</section>

<!-- user content -->

<section id="users">
    <h2>User Management</h2>
    <div class="users-content">
        <div class="user-card">
            <h3>John Doe</h3>
            <p>Email: john.doe@example.com</p>
            <p>Role: Admin</p>
            <button>Edit</button>
            <button>Delete</button>
        </div>

        <div class="user-card">
            <h3>Jane Smith</h3>
            <p>Email: jane.smith@example.com</p>
            <p>Role: User</p>
            <button>Edit</button>
            <button>Delete</button>
        </div>
    </div>
</section>

    </main>
    <script>
        function logout() {
            alert("Logged out successfully!");
            location.replace("/")
        }
    </script>
</body>
</html>
